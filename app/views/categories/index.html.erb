<% if user_signed_in? %>
<%= render "categories/navbar" %>
<% end %>
<div container align-items-center>
<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
  <h1 class="text-center">Categories</h1>
  <div id="categories">
    <% @categories.each do |category| %>
      <p >
        <%= link_to category_transactions_path(category) do %>
          <%= render partial: "category", locals: { category: category } %>
        <% end %>
      </p>
    <% end %>
  </div>
  <%= link_to "New category", new_category_path, class: "btn btn-sucess mb-3 mx-3 text-white", style: "width: 85%; margin: auto; background-color: #60B525; position: absolute; bottom: 0;" %>

<% else %>
  <div class="container" style="margin-top: 6rem;">
  <div class="column ">
  <div class="text-center my-3">
  <%= image_tag("logo.png", class: "rounded mx-auto d-block", style: "width: 20rem") %>
  </div>
  <div class="text-center d-flex justify-content-center flex-column">
  <%= link_to "Sign In", new_user_session_path , class:"btn icon-link-hover btn-sucess mb-3 bg-primary text-white", style:"margin-top: 6rem;"%>
  <%= link_to "Sign up", new_user_registration_path, class:"btn btn-sucess mb-3 bg-primary text-white"%>
  </div>
  </div>
  </div>
<% end %>
</div>