<p style="color: green"><%= notice %></p>
<div class="bg-primary rounded px-3 pt-3 d-flex align-items-center" style="width: 100%; height: 3rem;">
<%= link_to categories_path, class: "mb-3 fs-4" do %>
  <%= image_tag("left-arrow.png", class: "rounded d-block", style: "width: 2rem") %>
<% end %>
</div>
<div class="d-flex justify-content-between px-4 fs-3" >
<h4>Transactions</h4>
<%= "Total amount:  #{@total_amount}" %>
</div>
<div id="transactions">
  <% @transactions.each do |transaction| %>
    <p >
    <%= link_to transaction_path(transaction) do %>
      <%= render partial: "transaction", locals: { transaction: transaction } %>
    <% end %>
  </p>
  <% end %>
</div>

<%= link_to "New transaction", new_transaction_path, class:"btn btn-sucess mb-3 mx-3 text-white fs-5",style: "width: 85%; margin: auto; background-color: #60B525; position: absolute; bottom: 0;" %>
